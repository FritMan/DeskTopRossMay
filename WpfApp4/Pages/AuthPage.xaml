<Page x:Class="WpfApp4.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp4.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <StackPanel x:Name="AuthStack" VerticalAlignment="Center">
        <Label Content="Логин" HorizontalAlignment="Center"/>
        <TextBox x:Name="LoginTb"/>
        <Label Content="Пароль" HorizontalAlignment="Center"/>
        <PasswordBox Width="130" Height="30" x:Name="PasswordPb" HorizontalContentAlignment="Center"/>
        <Button x:Name="AuthBtn" Content="Войти" Click="AuthBtn_Click"/>
    </StackPanel>
</Page>
